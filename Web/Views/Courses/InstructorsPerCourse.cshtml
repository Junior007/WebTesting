@model SchoolDataBase.Course

@{
    ViewBag.Title = "Instructors per course";
}

<h2>@ViewBag.Title</h2>


<div>
    <h3>Course</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Credits)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Credits)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DepartmentID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentID)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Back to List", "Courses", new { id = Model.CourseID })
</p>

<div>
    <h3>Instructors</h3>

    <table class="table">
        <tr>
            <th>
                LastName
            </th>
            <th>
                FirstName
            </th>
            <th>
                HireDate
            </th>
            <th></th>
        </tr>

        @foreach (var student in Model.Instructors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => student.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.HireDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = student.PersonID }) |
                    @Html.ActionLink("Details", "Details", new { id = student.PersonID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = student.PersonID })
                </td>
            </tr>
        }

    </table>
</div>
