@model IEnumerable<SchoolDataBase.Department>


@{
    ViewBag.Title = "Department";
}

<h2>Department</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Administrator.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>Administrator</th>
        <th></th>
    </tr>

    @foreach (var department in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => department.Administrator.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => department.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => department.StartDate)
            </td>
            <td>
                @department.Administrator.LastName, @department.Administrator.FirstName
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=department.DepartmentID }) |
                @Html.ActionLink("Details", "Details", new { id=department.DepartmentID }) |
                @Html.ActionLink("Delete", "Delete", new { id=department.DepartmentID })
            </td>
        </tr>
    }

</table>

